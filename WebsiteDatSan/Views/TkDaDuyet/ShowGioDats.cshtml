@model IEnumerable<WebsiteDatSan.Models.GioDat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th {
            background-color: #f2f2f2;
            padding: 8px;
            text-align: left;
        }

        .table td {
            padding: 8px;
        }

        .table .text-success {
            color: #28a745;
            font-weight: bold;
        }

        .table .text-danger {
            color: #dc3545;
            font-weight: bold;
        }

    .btn-dat-san {
        background-color: #4CAF50;
        color: white;
        border: none;
        padding: 5px 10px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 12px;
        margin: 2px 2px;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-dat-san.disabled {
            background-color: #ffcccc;
            cursor: not-allowed;
        }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Giờ bắt đầu</th>
        <th>Giờ kết thúc</th>
        <th>Trạng thái sân</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GioBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GioKetThuc)
            </td>
            <td>
                @if (item.TrangThai == true)
                {
                    <span class="text-success">Còn</span>
                }
                else
                {
                    <span class="text-danger">Hết</span>
                }
            </td>
            <td>
                @if (item.TrangThai == true)
                {
                    <a href="@Url.Action("DatSan", "DatSan", new { id = item.MaGioDat })" class="btn-dat-san">Đặt sân</a>
                }
                else
                {
                    <button type="button" disabled class="btn-dat-san disabled">Đặt sân</button>
                }
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Back to List", "ShowSanChuSan")
