@model WebsiteDatSan.Models.AdminVM
@{
    ViewBag.Title = "HoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách hóa đơn</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Thời gian</th>
            <th>Sân</th>
            <th>Mã người dùng</th>
            <th>Mã hóa đơn</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày đặt</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hd in Model.HoaDons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => hd.GioDat.GioBatDau) - @Html.DisplayFor(modelItem => hd.GioDat.GioKetThuc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => hd.San.TenSan)
                </td>
                <td>
                    @foreach (var user in Model.AspNetUsers)
                    {
                        if (user.Id == hd.id)
                        {
                            @Html.DisplayFor(modelItem => user.FullName)
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => hd.MaHoaDon)
                </td>
                <td>
                    @{
                        string[] parts = hd.TongTien.ToString().Split(',');
                        string tien = parts[0];
                    }
                    <label id="TongTien" name="TongTien" value="">@string.Format("{0:#,#}", tien) VNĐ</label>
                </td>
                <td>
                    @if (hd.TrangThai == true)
                    {
                        <span class="text-success">Đã thanh toán</span>
                    }
                    else
                    {
                        <span class="text-danger">Chưa thanh toán</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => hd.NgayDat)
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = hd.id }, new { @class = "btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
